{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Launch (console)",
            "type": "clr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/DatasetRefactor.App/bin/Debug/net472/DatasetRefactor.App.exe",
            "args": [
                "source=DLL_FILE",
                "target=OUTPUT_DIRECTORY",
                "filter=TABLE_NAME_FILTER",
                "save=1"
            ],
            "cwd": "${workspaceFolder}/src/DatasetRefactor.App",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Attach",
            "type": "clr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}